@page "/Perk"
@inject IPerkService perkService
@inject DialogService dialog
@inject NotificationService notify

@if (inModifica == null)
{
	<RadzenRow>
		@foreach (Perk singola in Perks)
		{
			<RadzenColumn SizeMD="6" Size="12">
				<RadzenCard>
					<RadzenRow>
						<RadzenColumn Size="12">
							<RadzenText TextAlign="TextAlign.Center" Text="@singola.Nome" />
						</RadzenColumn>
					</RadzenRow>
					@if (giocatore.IsAdmin)
					{
						<RadzenRow>
							<RadzenColumn Size="6">
								<RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Click="x => Elimina(singola)" class="w-100" />
							</RadzenColumn>
							<RadzenColumn Size="6">
								<RadzenButton ButtonStyle="ButtonStyle.Warning" Icon="edit" Click="x => Modifica(singola)" class="w-100" />
							</RadzenColumn>
						</RadzenRow>
					}
				</RadzenCard>
			</RadzenColumn>
		}
	</RadzenRow>
	@if (giocatore.IsAdmin)
	{
		<RadzenFab Style="position:fixed;bottom:1rem;right:1rem;" ButtonType="ButtonType.Button" ButtonStyle="ButtonStyle.Primary" Icon="add" Click="x => Modifica(new Perk())" />
	}
}
else
{
	<EditForm Model="Perks" OnSubmit="Salva">
		<RadzenRow>
			<RadzenColumn Size="6">
				<RadzenFormField Text="Nome" class="w-100">
					<RadzenTextBox @bind-Value="@inModifica.Nome" class="w-100" />
				</RadzenFormField>
			</RadzenColumn>
			<RadzenColumn Size="3">
				<RadzenFormField Text="Punteggio" class="w-100">
					<RadzenNumeric @bind-Value="@inModifica.Punteggio" class="w-100" />
				</RadzenFormField>
			</RadzenColumn>
			<RadzenColumn Size="3">
				<RadzenLabel Text="È una Perk positiva: "></RadzenLabel>
				<RadzenSwitch @bind-Value="@inModifica.IsAbilità" />
			</RadzenColumn>
		</RadzenRow>
		<RadzenRow>
			<RadzenColumn Size="12">
				<RadzenFormField Text="Descrizione" class="w-100">
					<RadzenTextArea @bind-Value="@inModifica.Descrizione" class="w-100" Rows="50" />
				</RadzenFormField>
			</RadzenColumn>
		</RadzenRow>
		<RadzenFab Style="position:fixed;bottom:1rem;right:1rem;" ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Primary" Icon="save" />
	</EditForm>
}

@code {
	[CascadingParameter] public Giocatore giocatore { get; set; } = new Giocatore();

	List<Perk> Perks = new List<Perk>();
	Perk? inModifica = null;
	protected override async Task OnInitializedAsync()
	{
		await Carica();
	}

	private async Task Carica()
	{
		Perks = await perkService.GetPerks(); 
	}

	private void Modifica(Perk quale)
	{
		inModifica = quale;
	}

	private async Task Salva()
	{
		string errore = await perkService.SalvaPerk(inModifica);
		MostraErrore(errore, "Inserimento riuscito");
		inModifica = null;
		await Carica();
	}

	private async Task Elimina(Perk quale)
	{
		bool? result = await dialog.Confirm("Sei sicuro di voler eliminare questa perk?", "Eliminazione perk", new ConfirmOptions() { OkButtonText = "Sì", CancelButtonText = "No" });
		if (result.HasValue && result.Value)
		{
			string errore = await perkService.EliminaPerk(quale);
			MostraErrore(errore, "Elinimazione riuscita!");
			await Carica();
		}
	}

	private void MostraErrore(string errore, string messaggioDiRiuscita)
	{
		if (string.IsNullOrEmpty(errore))
		{
			notify.Notify(NotificationSeverity.Success, messaggioDiRiuscita);
		}
		else
		{
			notify.Notify(NotificationSeverity.Error, errore);
		}
	}
}
