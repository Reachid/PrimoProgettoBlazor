@page "/Sessioni"
@inject ISessioneService sessioneService
@inject DialogService dialog
@inject NotificationService notify

@if (inModifica == null)
{
	<RadzenRow>
		@foreach (Sessione singola in Sessioni)
		{
			<RadzenColumn SizeMD="6" Size="12">
				<RadzenCard>
					<RadzenRow>
						<RadzenColumn Size="12">
							<RadzenText TextAlign="TextAlign.Center" Text="@singola.Nome" />
						</RadzenColumn>
					</RadzenRow>
					<RadzenRow>
						<RadzenColumn Size="6">
							<RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Click="x => Elimina(singola)" class="w-100" />
						</RadzenColumn>
						<RadzenColumn Size="6">
							<RadzenButton ButtonStyle="ButtonStyle.Warning" Icon="edit" Click="x => Modifica(singola)" class="w-100" />
						</RadzenColumn>
					</RadzenRow>
				</RadzenCard>
			</RadzenColumn>
		}
	</RadzenRow>
	<RadzenFab Style="position:fixed;bottom:1rem;right:1rem;" ButtonType="ButtonType.Button" ButtonStyle="ButtonStyle.Primary" Icon="add" Click="x => Modifica(new Sessione())" />
}
else
{
	<EditForm Model="Sessioni" OnSubmit="Salva">
		<RadzenRow>
			<RadzenColumn Size="6">
				<RadzenFormField Text="Nome" class="w-100">
					<RadzenTextBox @bind-Value="@inModifica.Nome" class="w-100" />
				</RadzenFormField>
			</RadzenColumn>
		</RadzenRow>
		<RadzenFab Style="position:fixed;bottom:1rem;right:1rem;" ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Primary" Icon="save" />
	</EditForm>
}


@code {
	List<Sessione> Sessioni = new List<Sessione>();
	Sessione? inModifica = null;
	protected override async Task OnInitializedAsync()
	{
		await Carica();
	}

	private async Task Carica()
	{
		Sessioni = await sessioneService.GetSessioni();
	}

	private void Modifica(Sessione quale)
	{
		inModifica = quale;
	}

	private async Task Salva()
	{
		string errore = await sessioneService.SalvaSessione(inModifica);
		MostraErrore(errore, "Inserimento riuscito");
		inModifica = null;
		await Carica();
	}

	private async Task Elimina(Sessione quale)
	{
		bool? result = await dialog.Confirm("Sei sicuro di voler eliminare questa sessione?", "Eliminazione sessione", new ConfirmOptions() { OkButtonText = "Sì", CancelButtonText = "No" });
		if (result.HasValue && result.Value)
		{
			string errore = await sessioneService.EliminaSessione(quale);
			MostraErrore(errore, "Elinimazione riuscita!");
			await Carica();
		}
	}

	private void MostraErrore(string errore, string messaggioDiRiuscita)
	{
		if (string.IsNullOrEmpty(errore))
		{
			notify.Notify(NotificationSeverity.Success, messaggioDiRiuscita);
		}
		else
		{
			notify.Notify(NotificationSeverity.Error, errore);
		}
	}
}
